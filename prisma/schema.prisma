generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum ContentType {
  BLOG_POST
  SERVICE_PAGE
  LOCATION_PAGE
  LANDING_PAGE
  ABOUT_PAGE
  FAQ_PAGE
  HOW_TO_GUIDE
}

enum ContentStatus {
  DRAFT
  QUEUED
  GENERATING
  COMPLETED
  FAILED
}

enum BatchStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

// ─── NextAuth Models ────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Core Models ────────────────────────────────────

model User {
  id               String           @id @default(cuid())
  email            String           @unique
  name             String?
  passwordHash     String?
  emailVerified    DateTime?
  image            String?
  company          String?
  isSuperAdmin     Boolean          @default(false)
  encryptedApiKeys String?          @db.Text
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  accounts            Account[]
  sessions            Session[]
  memberships         TeamMembership[]
  featureRequests     FeatureRequest[]
  featureRequestVotes FeatureRequestVote[]

  @@index([email])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships   TeamMembership[]
  projects      Project[]
  videoProjects VideoProject[]
}

model TeamMembership {
  id     String @id @default(cuid())
  userId String
  teamId String
  role   Role   @default(MEMBER)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, teamId])
  @@index([userId])
  @@index([teamId])
}

// ─── Project & Sub-Account ──────────────────────────

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  logo        String?
  teamId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  team        Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  subAccounts SubAccount[]

  @@index([teamId])
}

model SubAccount {
  id                  String   @id @default(cuid())
  name                String
  address             String?
  city                String?
  state               String?
  zip                 String?
  country             String?  @default("US")
  phone               String?
  email               String?
  url                 String?
  companyType         String?
  isPrimary           Boolean  @default(false)
  googleDriveFolderId String?
  googleDriveTokens   String?  @db.Text
  projectId           String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contentBatches  ContentBatch[]
  videoContents   VideoContent[]
  contentExamples ContentExample[]
  customPrompts   CustomPrompt[]

  @@index([projectId])
}

model ContentExample {
  id           String   @id @default(cuid())
  name         String
  content      String   @db.Text
  subAccountId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subAccount SubAccount @relation(fields: [subAccountId], references: [id], onDelete: Cascade)

  @@index([subAccountId])
}

model CustomPrompt {
  id           String   @id @default(cuid())
  name         String
  prompt       String   @db.Text
  subAccountId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subAccount SubAccount @relation(fields: [subAccountId], references: [id], onDelete: Cascade)

  @@index([subAccountId])
}

// ─── Content Generation ─────────────────────────────

model ContentBatch {
  id             String      @id @default(cuid())
  subAccountId   String
  status         BatchStatus @default(PENDING)
  totalItems     Int         @default(0)
  completedItems Int         @default(0)
  failedItems    Int         @default(0)
  errorLog       String?     @db.Text
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  subAccount SubAccount    @relation(fields: [subAccountId], references: [id], onDelete: Cascade)
  items      ContentItem[]

  @@index([subAccountId])
  @@index([status])
}

model ContentItem {
  id               String        @id @default(cuid())
  batchId          String?
  title            String
  contentType      ContentType   @default(BLOG_POST)
  serviceArea      String?
  targetAudience   String?
  geolocation      String?
  targetKeywords   String?
  includeCta       Boolean       @default(true)
  generatedContent String?       @db.Text
  status           ContentStatus @default(DRAFT)
  googleDocId      String?
  googleDocUrl     String?
  errorMessage     String?
  retryCount       Int           @default(0)
  subAccountId     String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  batch ContentBatch? @relation(fields: [batchId], references: [id], onDelete: SetNull)

  @@index([batchId])
  @@index([subAccountId])
  @@index([status])
}

// ─── Video Content (Legacy) ─────────────────────────

model VideoContent {
  id           String        @id @default(cuid())
  subAccountId String
  title        String
  platform     String        @default("youtube")
  script       String?       @db.Text
  description  String?       @db.Text
  tags         String?
  status       ContentStatus @default(DRAFT)
  googleDocId  String?
  googleDocUrl String?
  metadata     String?       @db.Text
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  subAccount SubAccount @relation(fields: [subAccountId], references: [id], onDelete: Cascade)

  @@index([subAccountId])
  @@index([platform])
}

// ─── Video Project System ───────────────────────────

model VideoProject {
  id                  String   @id @default(cuid())
  name                String
  teamId              String
  youtubeChannelUrl   String?
  googleDriveFolderId String?
  googleDriveTokens   String?  @db.Text
  sheetId             String?
  sheetUrl            String?
  hooksDocId          String?
  hooksDocUrl         String?
  descriptionsDocId   String?
  descriptionsDocUrl  String?
  miniBlogsFolderId   String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  team   Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  topics VideoTopic[]

  @@index([teamId])
}

model VideoTopic {
  id                String   @id @default(cuid())
  videoProjectId    String
  title             String
  hookStatus        String   @default("PENDING")
  descriptionStatus String   @default("PENDING")
  miniBlogStatus    String   @default("PENDING")
  videoLink         String?
  transcription     String?  @db.Text
  miniBlogDocId     String?
  miniBlogDocUrl    String?
  sheetRow          Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  videoProject VideoProject @relation(fields: [videoProjectId], references: [id], onDelete: Cascade)

  @@index([videoProjectId])
}

// ─── Community Feature Requests ────────────────────

enum FeatureRequestStatus {
  OPEN
  PLANNED
  IN_PROGRESS
  COMPLETED
}

model FeatureRequest {
  id          String               @id @default(cuid())
  title       String
  description String               @db.Text
  status      FeatureRequestStatus @default(OPEN)
  userId      String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  user  User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes FeatureRequestVote[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model FeatureRequestVote {
  id               String   @id @default(cuid())
  featureRequestId String
  userId           String
  createdAt        DateTime @default(now())

  featureRequest FeatureRequest @relation(fields: [featureRequestId], references: [id], onDelete: Cascade)
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([featureRequestId, userId])
  @@index([featureRequestId])
  @@index([userId])
}
